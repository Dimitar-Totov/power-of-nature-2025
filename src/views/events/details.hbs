<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{event.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{event.name}}</h1>
            <h3 id="location">{{event.location}}</h3>
            <p id="type">Type: {{event.type}}</p>
            <p id="year"><span>Year of the Event: {{event.year}}</span></p>
            <p id="interested">Interested: {{interestedCount}}</p>
            <p id="description">{{event.description}}</p>
        </div>
        <div class="product-btn">
            {{#if userId}}
            {{#if isOwner}}
            <!--Only for registered user and author of the publication -->
            <div class="author">
                <a href="/auth/{{event._id}}/edit" class="btn-edit">Edit</a>
                <a href="/auth/{{event._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
            {{#if isInterested}}
            <!-- Logged in user who has already interested for this post-->
            <p class="interested-message">You've already been interested in this event!</p>
            {{else}}
            <!-- Logged in user who has not yet interested for this post-->
            <a href="/auth/{{event._id}}/interested" class="btn-interested">Interested</a>
            {{/if}}
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>