<section id="create-container">
    <div class="create-container-info">
        <h1>Create Event</h1>
        <form method="post">
            <label>Name of the Disaster:</label>
            <input type="text" id="name" name="name" value="{{eventData.name}}" placeholder="...">
            <label>Type of Disaster:</label>
            <select id="type" name="type">
                <option value="Wildfire">Wildfire</option>
                <option value="Flood">Flood</option>
                <option value="Earthquake">Earthquake</option>
                <option value="Hurricane">Hurricane</option>
                <option value="Drought">Drought</option>
                <option value="Tsunami">Tsunami</option>
                <option value="Other">Other</option>
            </select>
            <label>Year of the Event:</label>
            <input type="number" id="year" name="year" value="{{eventData.year}}" placeholder="...">
            <label>Location:</label>
            <input type="text" id="location" name="location" value="{{eventData.location}}" placeholder="...">
            <label>Image:</label>
            <input type="text" id="image" name="image" value="{{eventData.image}}" placeholder="http://...">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{eventData.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>